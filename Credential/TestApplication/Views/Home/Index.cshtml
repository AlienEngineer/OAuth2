@using System
@using System.Linq

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@{
    if (!Request.Cookies.Keys.Cast<String>().Any(e => e.Equals("github", StringComparison.InvariantCultureIgnoreCase)))
    {
        <a class="btn btn-info" href="/github/requestcode">
            <i class="fa fa-fw fa-github"></i>
            Allow access to github
        </a>
        <br />
    }
    else
    {
        <github-issues-list></github-issues-list>
    }
}

<hr/>

<a class="btn btn-primary" href="/Logout">
    <i class="fa fa-fw fa-lock"></i>
    Logout
</a>

